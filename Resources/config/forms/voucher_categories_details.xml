<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>voucher_categories_details</key>

    <properties>
        <property name="name" type="text_line" mandatory="true">
            <meta>
                <title>sulu_category.name</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <section name="data">
            <meta>
                <title lang="de">Gutschein(e)</title>
                <title lang="en">Voucher(s)</title>
            </meta>

            <properties>

                <block name="translation/data" default-type="field" minOccurs="0">
                    <params>
                        <param name="add_button_text">
                            <meta>
                                <title lang="en">Add voucher</title>
                                <title lang="de">Gutschein hinzufügen</title>
                            </meta>
                        </param>
                        <param name="collapsable" value="false" />
                        <param name="settings_form_key" value="voucher_block_settings" />
                    </params>

                    <types>
                        <type name="field">
                            <meta>
                                <title lang="de">Gutschein</title>
                                <title lang="en">Voucher</title>
                            </meta>

                            <properties>
                                <property name="headline" type="text_line">
                                    <meta>
                                        <title lang="de">Überschrift</title>
                                        <title lang="en">Headline</title>
                                    </meta>
                                </property>

                                <property name="subline" type="text_line">
                                    <meta>
                                        <title lang="de">Subline</title>
                                        <title lang="en">Subline</title>
                                    </meta>
                                </property>

                                <property name="intro" type="text_area">
                                    <meta>
                                        <title lang="de">Feld</title>
                                        <title lang="en">Field</title>
                                    </meta>
                                </property>

                                <property name="text" type="text_editor">
                                    <meta>
                                        <title lang="de">Text</title>
                                        <title lang="en">Text</title>
                                    </meta>
                                </property>

                                <property name="image" type="single_media_selection" colspan="6">
                                    <meta>
                                        <title>app.image</title>
                                    </meta>
                                    <params>
                                        <param name="types" value="image"/>
                                    </params>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>

            </properties>
        </section>
    </properties>
</form>
